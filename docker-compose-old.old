---
inventory:
  build: .
  command: npm start
  ports:
  - "8080:8080"
  links:
  - mongodb
  environment:
    - NODE_ENV=production
    - MONGODB_ADDRESS=mongodb
mongodb:
    image: mongo:latest
    container_name: "mongodb"
    environment:
      - MONGO_DATA_DIR=/data/db
      - MONGO_LOG_DIR=/dev/null
    volumes:
      - ./data/db:/data/db
    ports:
        - 27017:27017
    command: mongod --smallfiles --logpath=/dev/null # --quiet
